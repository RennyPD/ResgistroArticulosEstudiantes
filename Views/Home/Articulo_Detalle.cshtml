@model ZZZZRegistroArticulos.Models.ViewModels.ArticuloVM
@{
    ViewData["Title"] = "Articulo_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Articulo_Detalle</h1>

@if (Model.oArticulo.IdArticulo == 0)
{

    <h1>Crer articulo</h1>
}
else
{
    <h1>Editar articulo</h1>
}

<div class="row">
    <div class="col-sm-4">

        <form asp-action="Articulo_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oArticulo.IdArticulo" />

            <div class="mb-2">
                <label class="form-label" asp-for="oArticulo.Nombre">Nombre de articulo</label>
                <input class="form-control form-control-sm" asp-for="oArticulo.Nombre" type="text" required/>
                <span asp-validation-for="oArticulo.Nombre" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oArticulo.Descripcion">Descripcion</label>
                <input class="form-control form-control-sm" asp-for="oArticulo.Descripcion" type="text" required/>
                <span asp-validation-for="oArticulo.Descripcion" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oArticulo.Precio">Precio</label>
                <input class="form-control form-control-sm" asp-for="oArticulo.Precio" type="number" required/>
                <span asp-validation-for="oArticulo.Precio" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oArticulo.Lote">Lote</label>
                <input class="form-control form-control-sm" asp-for="oArticulo.Lote" type="number" required>
                <span asp-validation-for="oArticulo.Lote" class="text-danger"></span>
            </div>

            <div class="mb-2">

                @if (Model.oArticulo.IdArticulo == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>

                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>

            </div>

        </form>

    </div>
</div>

